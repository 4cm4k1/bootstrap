# SET OH-MY-ZSH LOCATION
export ZSH=${HOME}/.oh-my-zsh

# SET OH-MY-ZSH PROMPT THEME
ZSH_THEME='pure'

# SET CASE SENSITIVITY
CASE_SENSITIVE='false'
HYPHEN_INSENSITIVE='false'

# SET OH-MY-ZSH AUTO-UPDATE PREFERENCES
DISABLE_AUTO_UPDATE='false'
export UPDATE_ZSH_DAYS=1

# SET WHETHER LS COMMAND SHOWS COLORIZED OUTPUT
DISABLE_LS_COLORS='false'

# SET WHETHER SESSION WINDOW TITLE IS AUTOGENERATED
DISABLE_AUTO_TITLE='false'

# ENABLE AUTOCORRECTION OF COMMANDS
ENABLE_CORRECTION='true'

# SET WHETHER DOTS ARE SHOWN WHEN WAITING FOR TAB AUTOCOMPLETION
COMPLETION_WAITING_DOTS='true'

# SET HOW GIT TREATS UNTRACKED FILES
DISABLE_UNTRACKED_FILES_DIRTY='false'

# SET DATE FORMAT
HIST_STAMPS='yyyy-mm-dd'

# ENABLE OH-MY-ZSH PLUGINS
plugins=(adb aws bower catimg common-aliases copybuffer copydir copyfile docker docker-compose dotenv emoji encode64 extract frontend-search gem git github grunt gulp heroku httpie jira jsontools ng node npm nyan osx pip thefuck web-search xcode yarn zsh-autosuggestions zsh-syntax-highlighting zsh_reload)

# SET PACKAGE MANAGER & SDK LOCATIONS
export BREW_HOME=$(brew --prefix)
export ANDROID_HOME=${BREW_HOME}/Caskroom/android-sdk
export GCLOUD_SDK=${BREW_HOME}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk
export DART_SDK=${BREW_HOME}/opt/dart/libexec

# SET PATH COMPONENTS
export BREW_BIN=${BREW_HOME}/bin:${BREW_HOME}/sbin
export ANDROID_PLATFORM_TOOLS=${ANDROID_HOME}/platform-tools
export ANDROID_TOOLS=${ANDROID_HOME}/tools
export ANDROID_BIN=${ANDROID_PLATFORM_TOOLS}:${ANDROID_TOOLS}
export COREUTILS_BIN=$(brew --prefix coreutils)/libexec/gnubin
export DEFAULT_BIN=/usr/bin:/bin:/usr/sbin:/sbin
export GCLOUD_BIN=${GCLOUD_SDK}/path.zsh.inc
export DART_BIN=${HOME}/.pub-cache/bin

# SET MANPATH COMPONENTS
export COREUTILS_MAN=$(brew --prefix coreutils)/libexec/gnuman

# SET GCLOUD PATH & COMPLETIONS
source ${GCLOUD_BIN}
source ${GCLOUD_SDK}/completion.zsh.inc

# SET PATH & MANPATH
export PATH=${COREUTILS_BIN}:${BREW_BIN}:${ANDROID_BIN}:${DART_BIN}:${DEFAULT_BIN}:${PATH}
export MANPATH=${COREUTILS_MAN}

# SET LANGUAGE & ENCODING
export LC_ALL=en_US.UTF-8
export LANG='en_US'

# SET EDITORS
if [[ -n ${SSH_CONNECTION} ]]; then
  export EDITOR='nano'
else
  export EDITOR='nano'
fi

# START GPG-AGENT
export SSH_AUTH_SOCK=${HOME}/.gnupg/S.gpg-agent.ssh
gpgconf --launch gpg-agent

# START OH-MY-ZSH
source ${ZSH}/oh-my-zsh.sh

# ALIASES (MUST COME LAST)
alias apm='apm-beta'
alias atom='atom-beta'
alias gr='gr'
alias ls='ls --color=always -AGHX --group-directories-first'
alias pip='pip3'
alias python='python3'
alias 1up='brew update && brew upgrade && gem update && python ~/.piplist.py | cut -d = -f1 | xargs -n1 pip3 install -U && gcloud components update && npm i -g npm@next && yarn global upgrade-interactive && apm update && mas outdated'
alias cleanup='brew cleanup && brew prune && brew cask cleanup && yarn cache clean && npm cache verify && docker system prune -f && docker-clean'
